<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="pizzaRepo" class="com.lab.delivery.repository.pizza.InMemPizzaRepository">
    <property name="pizzasDB">
        <map>
            <entry key="1">
                <bean class="com.lab.delivery.domain.Pizza">
                    <constructor-arg index="0" value="1"/>
                    <constructor-arg index="1" value="Sea"/>
                    <constructor-arg index="2" value="20"/>
                    <constructor-arg index="3" value="SEA"/>
                </bean>
            </entry>
            <entry key="2">
                <bean class="com.lab.delivery.domain.Pizza">
                    <constructor-arg index="0" value="1"/>
                    <constructor-arg index="1" value="Meat"/>
                    <constructor-arg index="2" value="20"/>
                    <constructor-arg index="3" value="MEAT"/>
                </bean>
            </entry>
        </map>
    </property>
    </bean>
    <bean id="orderRepo" class="com.lab.delivery.repository.order.InMemOrderRepository"/>
    <bean id="customerRepo" class="com.lab.delivery.repository.customer.InMemCustomerRepository"/>
    <bean id="addressRepo" class="com.lab.delivery.repository.address.InMemAddressRepository"/>

</beans>